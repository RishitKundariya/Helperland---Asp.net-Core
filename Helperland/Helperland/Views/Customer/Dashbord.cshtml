        <script>
        /*Fill  Address in model from Edit button click */
        $(document).on('click', '.edit-link', function (e) {
            $("#txtModelAddressId").val($(this).val());
            $.ajax({
                  type: "POST",
                url: "@Url.Action("GetAddressById")",
                data: { "AddressID": $(this).val() },
                  success: function (responce) {
                      var obj = JSON.parse(responce);
                      $("#txtModelStreetName").val(obj.AddressLine1);
                      $("#txtModelHouseNumber").val(obj.AddressLine2);
                      $("#txtModelPincode").val(obj.ZipCode);
                      $("#txtModelMobileNumber").val(obj.MobileNo);
                      $("#ddModelCity").val(obj.CityId);

                   },
                  failure: function (response) {
                        alert("failure");
                  },
                  error: function (response) {
                        alert("Something went Worng");
                  }

            });
            $("#AddressModelTital").text("Edit Address");
            $("#EditAddress").modal('show');

        });

        /*Date of birth Validation*/
        $(document).on('click', '.ddCheck', function (e) {
            var day = $("#ddDay").val();
            var month = $("#ddMonth").val();
            var year = $("#ddYear").val();
            if (day == "" || month == "" || year == "" || day == null || month == null || year == null) {
                $("#errDOB").show();
                $("#btnModelSave").attr('disabled', 'disabled');
            }
            else {
                $("#errDOB").hide();
                $("#btnSaveUserData").removeAttr("disabled");
            }
        });

        /*Open Delete Address model */
        $(document).on('click', '.delete-link', function (e) {
            $("#txtDeleteModelAddressId").val($(this).val());
            $("#DeleteModel").modal('show');
        });

        $(document).ready(function () {
            fillAddress();
            fillUserData();

            $('#nav-tab button').on('click', function (e) {
                $(this).tab('show');
                $(".nav-tabs button").removeClass("border-bottom-blue text-marun-bold");
                $(this).addClass(" border-bottom-blue text-marun-bold");
                $(".tab-content .tab-pane").addClass("active-nav");
            })

            /*  Save a user data on computer  button click*/
            $("#btnSaveUserData").on('click', function () {
                $(".loder-wrapper").fadeIn("slow");
                var languageId = $("#ddLanguage").val();
                if (languageId == null || languageId < 1) {
                    $("#btnSaveUserData").attr('disabled', 'disabled');
                    $("#errddLanguage").show();
                    return;
                }
                var day = $("#ddDay").val();
                var month = $("#ddMonth").val();
                var year = $("#ddYear").val();
                if (day == null || month == null || year == null) {
                    $("#errDOB").show();
                    $("#btnSaveUserData").attr('disabled', 'disabled');
                    return;
                }
                if ($('#Details').find('.error').length > 0) {
                    $("#btnSaveUserData").attr('disabled', 'disabled');

                } else {
                    var DOB = day + '/' + month + '/' + year;
                    var FirstName = $("#txtFirstName").val();
                    var LastName = $("#txtLastName").val();
                    var MobileNo = $("#txtMobileNumber").val();
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("UpdateUserData")",
                        data: { "FirstName": FirstName, "LastName": LastName, "DOB": DOB, "MobileNumber": MobileNo, "UserId": $("#userId").val(), "LanguageId": languageId },
                        success: function (responce) {
                            $(".loder-wrapper").fadeOut("slow");
                            if (responce) {
                                $("#alertUserData").show().fadeOut(5000);
                                fillUserData();
                            }
                            else {
                                alert("Please try again");
                            }
                            $(".spinner").hide();


                        },
                        failure: function (response) {
                            alert("failure");
                            $(".loder-wrapper").fadeOut("slow");
                        },
                        error: function (response) {
                            alert("Something went Worng");
                            $(".loder-wrapper").fadeOut("slow");
                        }

                     });



                }



            });



            /* Model Save Button Click */
            $("#btnModelSave").on('click', function () {
                if ($("#txtModelAddressId").val() == "") {
                    addNewAddress();
                    return;
                }
                $(".loder-wrapper").fadeIn("slow");
                var userId = $("#userId").val();
                var AddressLine1 = $("#txtModelStreetName").val();
                var AddressLine2 = $("#txtModelHouseNumber").val();
                var CityId = $("#ddModelCity").val();
                var Pincode = $("#txtModelPincode").val();
                var Mobilenumber = $("#txtModelMobileNumber").val();

                var address = {};
                address.addressID = parseInt($("#txtModelAddressId").val());
                address.userId = parseInt(userId);
                address.addressLine1 = AddressLine1;
                address.addressLine2 = AddressLine2;
                address.cityId = parseInt(CityId);
                address.zipCode = Pincode;
                address.mobileNo = Mobilenumber;
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateAddress")",
                    data:JSON.stringify(address),
                    dataType: 'json',
                    contentType: 'application/json',
                    success: function (responce) {
                        if (responce) {
